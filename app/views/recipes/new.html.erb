<h1>Create New Recipe:</h1>

<%= form_for @recipe do |f| %>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
  
    <%= f.fields_for :ingredients do |ingred| %>
        <%= ingred.label :name %><br>
        <%= ingred.text_field :name %><br>
        <%= ingred.label :quantity %><br>
        <%= ingred.text_field :quantity %><br>
    <% end %>
    
 
  <%= f.submit %>
<% end %>

